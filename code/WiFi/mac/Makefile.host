             --TX-input-file-name=mac.infile \
             --TX-input-file-mode=dbg \
             --TX-output=memory \
             --RX-input=memory \
             --RX-output=file \
             --RX-output-file-name=$@ \
             --RX-output-file-mode=dbg \
             --memory-size=1000 \
             --MAC-type=2-threads \
             $(EXTRARUNOPT)

