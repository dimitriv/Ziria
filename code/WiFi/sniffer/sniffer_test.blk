fun comp convert_to_int8() {
var ai : arr[1] int8;

  repeat {
    x<-takes 8;
    do{
      bits_to_int8(ai, x);
    }
    emits ai;
  }
}

fun comp att() {
var c : complex16;
  repeat {
    (x:complex16)<-take;
    do{
    c.re := x.re/1;
    c.im := x.im/1;
    }
    emit c;
  }
}


-- cca_tufv waits for some idle time before detecting a packet
-- so we supply 1000 zero samples before sending the actual packet
fun comp append_idle() {
  times 1000 {
    emit complex16{re=0; im=0};
  }
  repeat{
    x<-take;
    emit x;
  }
}


