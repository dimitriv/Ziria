fun comp print_hdr() {
x <- takes 24*8;
do {parseMACHeader(x)};
emits x;

repeat{
  x<-take;
  emit x;
}
}

let comp main = read[complex16] >>> append_idle() >>> receiver() >>> print_hdr() >>> convert_to_int8() >>> write
